@model SARSTWebApplication.Models.ResidentStay

@{
    Layout = null;
}

<style>
    /* Center the content */
    body {
        display: flex;
        flex-direction: column;
        justify-content: center;
        align-items: center;
        height: 80%;
        
    }

    /* Style the container */
    .ctn {
       
        background-color: #fff;
        padding: 20px;
        border-radius: 5px;
        box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
        max-width: 600px;
        width: 100%;
    }

    /* Style the headings */
    h3, h4 {
        color: #333;
        margin: 0;
        font-weight: bold;
    }

    /* Style the horizontal rule */
    hr {
        margin: 20px 0;
        border: none;
        height: 1px;
        background-color: #ccc;
    }

    /* Style the definition list */
    dl {
        display: grid;
        grid-template-columns: repeat(2, 1fr);
        grid-gap: 10px;
    }

    /* Style the definition term */
    dt {
        font-weight: bold;
    }

    /* Style the definition description */
    dd {
        margin: 0;
    }

    /* Style the delete button */
    input[type="submit"] {
        background-color: #dc3545;
        border: none;
        color: #fff;
        padding: 10px 20px;
        border-radius: 5px;
        cursor: pointer;
    }

    /* Style the back link */
    a {
        color: #007bff;
        text-decoration: none;
    }

        /* Style the back link when hovered */
        a:hover {
            text-decoration: underline;
        }

</style>

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Delete</title>
</head>
<body>

<h2>Are you sure you want to delete this?</h2>
<div class="ctn">
    <h4>ResidentStay</h4>
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.residentId)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.residentId)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.checkinDateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.checkinDateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.checkoutDateTime)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.checkoutDateTime)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.userName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.userName)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="stayId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
</body>
</html>
