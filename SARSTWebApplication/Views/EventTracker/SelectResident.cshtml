@model IEnumerable<SARSTWebApplication.Models.Resident>

<div style="display: flex; justify-content: space-between; align-items: center;">
    <h2>@(ViewBag.eventType)</h2>
</div>

<h1 class="display-6">Select the stay where the event should be recorded.</h1>
<input style="width: 350px" type="text" id="searchFilter" placeholder="Search by name or distinguishing features" />
<div id="gridResidents"></div>


@section Scripts {
    <script>

        $(() => {
            searchResidents();

            $('#searchFilter').on('keyup', () => {
                searchResidents();
            })
        });

        function searchResidents() {
                $.ajax({
                    url: "/EventTracker/SearchResidents?query=" + $('#searchFilter').val(),
                type: 'Get',
                success: function (data) {
                    $('#gridResidents').html('').html(data);
                },
                error: function () {
                    alert('Error');
                }
                })
        }

    </script>
}